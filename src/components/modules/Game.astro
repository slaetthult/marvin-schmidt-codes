<section class="jump-game module" id="game" aria-labelledby="game-title" role="region" data-jump-game>
    <div class="grid">
        <div class="col-span-12 h-300 lg:col-span-10 lg:col-start-2">
            <h2 id="game-title" data-scroll-reveal class="mb-20">Lust auf ein Spiel?</h2>
            <div data-scroll-reveal class="jump-game__wrapper"></div>
        </div>
    </div>
</section>


<style>
    #hud{
        position:fixed; inset:auto 0 0 0; display:flex; justify-content:space-between;
        padding:12px 16px; font-weight:600; letter-spacing:.02em; pointer-events:none;
        background:linear-gradient(to top, rgba(0,0,0,.45), rgba(0,0,0,0));
    }
    #hint{font-weight:400; opacity:.7}
    canvas{display:block; width:100vw; height:100vh}
</style>

<script>
    import { lazyLoadWhenIdle } from '@scripts/utils/lazy-load-when-idle';
    lazyLoadWhenIdle('../modules/jump-game', {
        selector: '*[data-jump-game]',
        onLoad: ({ jumpGame }) => jumpGame.init(),
    });
</script>