</div>

<script>
    import { lazyLoadWhenIdle } from '@scripts/utils/lazy-load-when-idle';
    lazyLoadWhenIdle(() => import('@scripts/modules/services.js'), {
        selector: '*[data-services]',
        rootMargin: '0px 0px 10% 0px',
        onLoad: ({ services }) => services?.init?.()
    });
</script>

<style>
    .swiper-slide {
        opacity: 0 !important;
    }
    .swiper-slide-visible {
        opacity: 1 !important;
    }
</style>










